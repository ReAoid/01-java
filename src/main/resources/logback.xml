<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="false">

    <!-- 定义日志输出格式 -->
    <property name="LOG_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{50} [%method:%line] - %msg%n" />
    <property name="CONSOLE_PATTERN" value="%green(%d{yyyy-MM-dd HH:mm:ss.SSS}) [%blue(%thread)] %highlight(%-5level) %cyan(%logger{36}) [%yellow(%method:%line)] - %msg%n" />

    <!-- 控制台输出 -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${CONSOLE_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- 文件输出（按天滚动） -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>src/main/resources/logs/app.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- 每天生成一个新文件，保留7天 -->
            <fileNamePattern>src/main/resources/logs/app.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>7</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- 设置根日志级别和输出目标 -->
    <root level="INFO">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="FILE" />
    </root>

    <!-- 项目包的日志级别 -->
    <logger name="com.chatbot" level="DEBUG" />
    
    <!-- 具体组件的日志级别控制 -->
    <logger name="com.chatbot.controller" level="DEBUG" />
    <logger name="com.chatbot.service" level="DEBUG" />
    <logger name="com.chatbot.websocket" level="DEBUG" />
    <logger name="com.chatbot.util" level="DEBUG" />
    
    <!-- Spring框架日志级别 -->
    <logger name="org.springframework" level="INFO" />
    <logger name="org.springframework.web.socket" level="DEBUG" />
    
    <!-- HTTP客户端日志 -->
    <logger name="okhttp3" level="INFO" />
    
    <!-- JSON处理日志 -->
    <logger name="com.fasterxml.jackson" level="WARN" />

</configuration>